#!/bin/sh
PACKAGE_TARNAME="@PACKAGE_TARNAME@"
prefix="@prefix@"
exec_prefix="@exec_prefix@"
bindir="@bindir@"
datarootdir="@datarootdir@"
docdir="@docdir@"
htmldir="@htmldir@"
libdir="@libdir@"
case $1 in
    --prefix)   echo "$prefix";;
    --exec_prefix)
		echo "$exec_prefix";;
    --bindir)	echo "$bindir";;
    --datarootdir)
		echo "$datarootdir";;
    --docdir)   echo "$docdir";;
    --htmldir)	echo "$htmldir";;
    --libdir)   echo "$libdir";;
    --cppflags)	echo @CPPFLAGS@ -I@includedir@;;
    --cxxflags)	echo @CXXFLAGS@;;
    --ldflags)	echo -L@libdir@ -ltensor @LDFLAGS@ @LIBS@;;
    --compile)	shift; exec @CXX@ @CPPFLAGS@ @CXXFLAGS@ $*;;
    --link)	shift; exec @CXX@ @CPPFLAGS@ @CXXFLAGS@ $* -L@libdir@ -ltensor @LDFLAGS@ @LIBS@ @FLIBS@;;
    *)		cat <<EOF
tensor-config [--cppflags | --cxxflags | --ldflags]

	Outputs appropriate flags for compiling and linking programs
	that make use of the Tensor library.

tensor-config [--compile | --link] arguments ...

	Automate compilation or linking of programs and libraries with
	the Tensor toolbox.

EOF
esac
cd
